<div class="card" id="box">
  <header>
    <h4>
      <span id="id">#{{ box.id }}</span>
      {{ box.title }}
      <h4>
  </header>
  <p>
    {{ box.description | replace("\n", "<p>\n") }}

    <div class="row">
      {% for img in box.interior %}
        <div class="gallery col-6  col-3-md col-2-lg">
          <img src="{{ img.permalink() }}" >
        </div>
      {% endfor %}
    </div>

    <footer>
      <p class="text-right">
        â‚¬{{ box.value }}
    </footer>
    {% if not hide_buttons  %}
    <a class="button secondary col" href="/reprint?id={{ box.id }}">Re-print labels</a>
    <a class="button error col" href="/delete?id={{ box.id }}">Delete box</a>
    {% endif %}
</div>
